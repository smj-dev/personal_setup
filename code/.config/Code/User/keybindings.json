[
    {
        "key": "ctrl+n",
        "command": "workbench.view.explorer",
        "when": "!terminalFocus && !sideBarVisible"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "!terminalFocus && sideBarVisible"
    },
    {
        "key": "enter",
        "command": "runCommands",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus && !explorerResourceIsFolder",
        "args": {
            "commands": [
                "list.select",
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.focusActiveEditorGroup"
            ]
        }
    },
    {
        "key": "ctrl+enter",
        "command": "workbench.action.tasks.runLast"
    },
    // Add
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "shift+a",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // Rename / Delete
    {
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // Copy / Paste
    {
        "key": "y",
        "command": "filesExplorer.copy",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "alt+j",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
    },
    {
        "key": "alt+k",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+alt+j",
        "command": "editor.action.insertCursorBelow",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+alt+k",
        "command": "editor.action.insertCursorAbove",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusSideBar",
        "when": "!terminalFocus && !sideBarFocus && activeEditorGroupIndex == 0"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusLeftGroup",
        "when": "!terminalFocus && !sideBarFocus && activeEditorGroupIndex != 0"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "!terminalFocus && sideBarFocus"
    },
    // RIGHT: sidebar -> editor, and editor splits right
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "!terminalFocus && sideBarFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusRightGroup",
        "when": "!terminalFocus && !sideBarFocus"
    },
    // DOWN: editor -> panel (terminal), panel -> editor
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusPanel",
        "when": "!terminalFocus && !panelFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "panelFocus"
    },
    // UP: panel -> editor (and optionally editor group up if you use grid splits)
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusAboveGroup",
        "when": "!terminalFocus && !panelFocus"
    }
]